<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="qb_blog_backend_comment_list" pattern="/list">
        <default key="_controller">QbBlogBundle:Backend\Comment:list</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="qb_blog_backend_comment_edit" pattern="/{id}/edit">
        <default key="_controller">QbBlogBundle:Backend\Comment:edit</default>
        <requirement key="_method">GET|POST</requirement>
    </route>

    <route id="qb_blog_backend_comment_delete" pattern="/{id}/delete">
        <default key="_controller">QbBlogBundle:Backend\Comment:delete</default>
        <requirement key="_method">GET</requirement>
    </route>
</routes>
