<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="qb_blog_backend_category_list" pattern="/list">
        <default key="_controller">QbBlogBundle:Backend\Category:list</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="qb_blog_backend_category_new" pattern="/new">
        <default key="_controller">QbBlogBundle:Backend\Category:new</default>
        <requirement key="_method">GET|POST</requirement>
    </route>

    <route id="qb_blog_backend_category_edit" pattern="/{slug}/edit">
        <default key="_controller">QbBlogBundle:Backend\Category:edit</default>
        <requirement key="_method">GET|POST</requirement>
    </route>

    <route id="qb_blog_backend_category_delete" pattern="/{slug}/delete">
        <default key="_controller">QbBlogBundle:Backend\Category:delete</default>
        <requirement key="_method">GET</requirement>
    </route>
</routes>
