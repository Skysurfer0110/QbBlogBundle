<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="qb_blog_backend_post" pattern="/">
        <default key="_controller">QbBlogBundle:Backend\Post:index</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="qb_blog_backend_post_new" pattern="/new">
        <default key="_controller">QbBlogBundle:Backend\Post:new</default>
        <requirement key="_method">GET|POST</requirement>
    </route>

    <route id="qb_blog_backend_post_edit" pattern="/{id}/edit">
        <default key="_controller">QbBlogBundle:Backend\Post:edit</default>
        <requirement key="_method">GET|POST</requirement>
    </route>

    <route id="qb_blog_backend_post_delete" pattern="/{id}/delete/{token}">
        <default key="_controller">QbBlogBundle:Backend\Post:delete</default>
        <requirement key="_method">GET</requirement>
    </route>
</routes>
