<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="qb_blog.category.form.type.class">Qb\Bundle\BlogBundle\Form\Type\CategoryType</parameter>
        <parameter key="qb_blog.category.form.handler.default.class">Qb\Bundle\BlogBundle\Form\Handler\CategoryHandler</parameter>
        <parameter key="qb_blog.comment.form.type.class">Qb\Bundle\BlogBundle\Form\Type\CommentType</parameter>
        <parameter key="qb_blog.comment.form.handler.default.class">Qb\Bundle\BlogBundle\Form\Handler\CommentHandler</parameter>
        <parameter key="qb_blog.post.form.type.class">Qb\Bundle\BlogBundle\Form\Type\PostType</parameter>
        <parameter key="qb_blog.post.form.handler.default.class">Qb\Bundle\BlogBundle\Form\Handler\PostHandler</parameter>
        <parameter key="qb_blog.tag.form.type.class">Qb\Bundle\BlogBundle\Form\Type\TagType</parameter>
        <parameter key="qb_blog.tag.form.handler.default.class">Qb\Bundle\BlogBundle\Form\Handler\TagHandler</parameter>
    </parameters>

    <services>
        <!-- Category -->
        <service id="qb_blog.category.form" factory-method="createNamed" factory-service="form.factory" class="Symfony\Component\Form\Form">
            <argument>%qb_blog.category.form.name%</argument>
            <argument>%qb_blog.category.form.type%</argument>
        </service>

        <service id="qb_blog.category.form.type" class="%qb_blog.category.form.type.class%">
            <tag name="form.type" alias="qb_blog_category" />
            <argument>%qb_blog.category.model.class%</argument>
        </service>

        <service id="qb_blog.category.form.handler.default" class="%qb_blog.category.form.handler.default.class%" scope="request" public="false">
            <argument type="service" id="qb_blog.category.form" />
            <argument type="service" id="request" />
            <argument type="service" id="qb_blog.category_manager" />
        </service>

        <!-- Comment -->
        <service id="qb_blog.comment.form" factory-method="createNamed" factory-service="form.factory" class="Symfony\Component\Form\Form">
            <argument>%qb_blog.comment.form.name%</argument>
            <argument>%qb_blog.comment.form.type%</argument>
        </service>

        <service id="qb_blog.comment.form.type" class="%qb_blog.comment.form.type.class%">
            <tag name="form.type" alias="qb_blog_comment" />
            <argument>%qb_blog.comment.model.class%</argument>
        </service>

        <service id="qb_blog.comment.form.handler.default" class="%qb_blog.comment.form.handler.default.class%" scope="request" public="false">
            <argument type="service" id="qb_blog.comment.form" />
            <argument type="service" id="request" />
            <argument type="service" id="qb_blog.comment_manager" />
        </service>

        <!-- Post -->
        <service id="qb_blog.post.form" factory-method="createNamed" factory-service="form.factory" class="Symfony\Component\Form\Form">
            <argument>%qb_blog.post.form.name%</argument>
            <argument>%qb_blog.post.form.type%</argument>
        </service>

        <service id="qb_blog.post.form.type" class="%qb_blog.post.form.type.class%">
            <tag name="form.type" alias="qb_blog_post" />
            <argument>%qb_blog.post.model.class%</argument>
        </service>

        <service id="qb_blog.post.form.handler.default" class="%qb_blog.post.form.handler.default.class%" scope="request" public="false">
            <argument type="service" id="qb_blog.post.form" />
            <argument type="service" id="request" />
            <argument type="service" id="qb_blog.post_manager" />
        </service>

        <!-- Tag -->
        <service id="qb_blog.tag.form" factory-method="createNamed" factory-service="form.factory" class="Symfony\Component\Form\Form">
            <argument>%qb_blog.tag.form.name%</argument>
            <argument>%qb_blog.tag.form.type%</argument>
        </service>

        <service id="qb_blog.tag.form.type" class="%qb_blog.tag.form.type.class%">
            <tag name="form.type" alias="qb_blog_tag" />
            <argument>%qb_blog.tag.model.class%</argument>
        </service>

        <service id="qb_blog.tag.form.handler.default" class="%qb_blog.tag.form.handler.default.class%" scope="request" public="false">
            <argument type="service" id="qb_blog.tag.form" />
            <argument type="service" id="request" />
            <argument type="service" id="qb_blog.tag_manager" />
        </service>
    </services>
</container>
