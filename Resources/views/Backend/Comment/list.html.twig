<table>
    <thead>
        <tr>
            <th>Post</th>
            <th>Author</th>
            <th>Comment</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for comment in comments %}
        <tr>
            <td>{{ comment.post }}</td>
            <td>{{ comment.author }}</td>
            <td>{{ comment }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('qb_blog_backend_comment_edit', { 'id': comment.id }) }}">edit</a>
                    </li>
                    <li>
                        <a href="{{ path('qb_blog_backend_comment_delete', { 'id': comment.id, 'token': csrf_token( comment ) }) }}">delete</a>
                    </li>
                </ul>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="4">There are no comments.</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
