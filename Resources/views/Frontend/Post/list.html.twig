{% extends 'QbBlogBundle::Frontend\\layout.html.twig' %}

{% block qb_blog_body %}
    {% for post in posts %}
        <article>
            <header>
                <h1><a href="{{ path('qb_blog_frontend_post_show', { 'slug': post.slug }) }}">{{ post.title }}</a></h1>
                <p>Posted by {{ post.author }} on <time datetime="{{ post.created|date('c') }}">{{ post.created|date('l, F j, Y') }}</time> in <a href="{{ path('qb_blog_frontend_category_show', { 'slug': post.category.slug }) }}">{{ post.category }}</a></p>
            </header>
            {{ post.body|raw }}
            <footer>
                {% if post.tags %}
                    <ul>
                    {% for tag in post.tags %}
                        <li><a href="{{ path('qb_blog_frontend_tag_show', { 'slug': tag.slug }) }}">{{ tag }}</a></li>
                    {% endfor %}
                    </ul>
                {% endif %}
                <p>{{ post.comments|length }} comments</p>
            </footer>
        </article>
        <hr />
    {% else %}
        <p>There are no posts.</p>
    {% endfor %}
{% endblock %}
